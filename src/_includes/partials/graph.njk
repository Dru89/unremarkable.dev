{% set excerpt %}
{% if excerptText %}
  {{ excerptText }}
{% elif page.excerpt  %}
  {{ page.excerpt }}
{% else %}
  {{ metadata.description }}
{% endif %}
{% endset -%}

{% set ogImage %}
{% if isPost %}
  {{ metadata.url }}/og-images/{{ title | slugify }}.png
{% else %}
  {{ metadata.url }}/img/og-image.png
{% endif %}
{% endset -%}

<meta property="og:type" content="website">
<meta property="og:locale" content="en_US">
<meta property="og:site_name" content="{{ metadata.title }}">
<meta property="og:url" content="{{ metadata.url }}{{ page.url }}">
<meta property="og:description" content="{{ excerpt | safe | trim }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title }}{{ ' - ' + metadata.title if not isHome }}">
<meta name="twitter:site" content="@dru89">
<meta name="twitter:description" content="{{ excerpt | safe | trim }}">
<meta name="twitter:image" content="{{ ogImage | safe | trim }}">
<meta property="og:image" content="{{ ogImage | safe | trim }}">
<meta name="generator" content="{{ eleventy.generator }}">
<link rel="webmention" href="https://webmention.io/{{ metadata.domain }}/webmention" />
<link rel="pingback" href="https://webmention.io/{{ metadata.domain }}/xmlrpc" />
<link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}" />
<link rel="me" href="https://social.lol/@dru89" />
<link rel="me" href="https://github.com/dru89" />
<link rel="me" href="https://twitter.com/dru89" />